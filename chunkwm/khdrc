# reload config
cmd + alt + ctrl - r : khd -e "reload"

# toggle desktop offset
cmd + alt + ctrl - a : chunkc tiling::desktop --toggle offset

# focus window
alt + cmd - h : chunkc tiling::window --focus west
alt + cmd - j : chunkc tiling::window --focus south
alt + cmd - k : chunkc tiling::window --focus north
alt + cmd - l : chunkc tiling::window --focus east
ctrl + shift - h : chunkc tiling::window --focus west
ctrl + shift - j : chunkc tiling::window --focus south
ctrl + shift - k : chunkc tiling::window --focus north
ctrl + shift - l : chunkc tiling::window --focus east

# TODO do via movement-mode or something like it
# ctrl - h : chunkc tiling::query -w owner | grep -iqE '(tmux|emac)' && echo "no-op" || chunkc tiling::window --focus west
# ctrl - j : chunkc tiling::query -w owner | grep -iqE '(tmux|emac)' && echo "no-op" || chunkc tiling::window --focus south
# ctrl - k : chunkc tiling::query -w owner | grep -iqE '(tmux|emac)' && echo "no-op" || chunkc tiling::window --focus north
# ctrl - l : chunkc tiling::query -w owner | grep -iqE '(tmux|emac)' && echo "no-op" || chunkc tiling::window --focus east

# swap window
ctrl + alt - h : chunkc tiling::window --swap west
ctrl + alt - j : chunkc tiling::window --swap south
ctrl + alt - k : chunkc tiling::window --swap north
ctrl + alt - l : chunkc tiling::window --swap east

# move window
ctrl + alt + shift - h : chunkc tiling::window --warp west
ctrl + alt + shift - j : chunkc tiling::window --warp south
ctrl + alt + shift - k : chunkc tiling::window --warp north
ctrl + alt + shift - l : chunkc tiling::window --warp east

# increase region size
shift + ctrl + alt - a : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
shift + ctrl + alt - s : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
shift + ctrl + alt - w : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
shift + ctrl + alt - d : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# decrease region size
ctrl + alt - a : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
ctrl + alt - s : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
ctrl + alt - w : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
ctrl + alt - d : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

# rotate tree
alt - r : chunkc tiling::desktop --rotate 90

# float / unfloat window
alt - f : chunkc tiling::window --toggle float

# change layout of desktop
ctrl + alt - b : chunkc tiling::desktop --layout bsp
ctrl + alt - m : chunkc tiling::desktop --layout monocle
ctrl + alt - f : chunkc tiling::desktop --layout float

# quick focus app
ctrl + alt - e : osascript -e "tell application \"Emacs\" to activate"
ctrl + alt - t : osascript -e "tell application \"iTerm2\" to activate"
ctrl + alt - s : osascript -e "tell application \"Slack\" to activate"
ctrl + alt - c : osascript -e "tell application \"Google Chrome\" to activate"
ctrl + alt - p : osascript -e "tell application \"Spotify\" to activate"
ctrl + alt - m : osascript -e "tell application \"Messages\" to activate"

# ctrl - q : khd -e "mode activate escape"
# escape + ctrl - q : khd -e "mode activate default"
khd void_unlisted_bind off

khd mode select prefix on
khd mode select timeout 0.35
khd mode select on_enter chunkc border::color 0xfa76d3cc
khd mode escape on_enter chunkc border::color 0xfac8cb75
khd mode default on_enter chunkc border::color 0xfa78414d

# send window to monitor and follow focus
shift + alt - 1 : chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1
shift + alt - 2 : chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2

# focus monitor
cmd + alt - z  : chunkc tiling::monitor -f prev
cmd + alt - c  : chunkc tiling::monitor -f next
cmd + alt - 1  : chunkc tiling::monitor -f 1
cmd + alt - 2  : chunkc tiling::monitor -f 2
cmd + alt - 3  : chunkc tiling::monitor -f 3
